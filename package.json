{
  "author": "Fa An <2998784916@qq.com>",
  "description": "File only used in CI.",
  "devDependencies": {
    "@prettier/plugin-xml": "^2.2.0",
    "cspell": "^6.31.1",
    "prettier-plugin-ini": "^1.1.0",
    "prettier-plugin-toml": "^0.3.1"
  },
  "license": "MIT",
  "main": "index.js",
  "name": "xirvik-tools",
  "private": false,
  "repository": "https://github.com/Tatsh/xirvik-tools",
  "scripts": {
    "check-formatting": "prettier -c './**/*.cfg' './**/*.ini' './**/*.md' './**/*.toml' './**/*.plist' './**/*.yml' ./.prettierrc ./.style.yapf && isort . --check && yapf -rd xirvik .stubs test",
    "check-spelling": "cspell --no-progress './**/*'  './**/.*'",
    "format": "prettier -w './**/*.cfg' './**/*.ini' './**/*.md' './**/*.toml' './**/*.plist' './**/*.yml' ./.prettierrc ./.style.yapf && isort . && yapf -ri xirvik .stubs test",
    "install-python-deps": "python -m pip install --upgrade pip && pip install poetry && poetry install && pip install -e . && pip install mypy pylint pylint-quotes pytest pytest-cov coveralls pytest-mock types-requests toml yapf",
    "mypy": "mypy .",
    "pylint": "pylint xirvik",
    "qa": "yarn mypy && yarn pylint && yarn check-spelling && yarn check-formatting"
  },
  "version": "0.4.1"
}
